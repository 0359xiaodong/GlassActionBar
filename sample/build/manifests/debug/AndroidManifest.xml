<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="4" android:versionName="0.3.0" package="com.manuelpeinado.glassactionbardemo">

    <uses-sdk android:minSdkVersion="14" android:targetSdkVersion="18"/>

    <!--  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> -->

    <application android:allowBackup="true" android:icon="@drawable/ic_launcher" android:label="@string/app_name" android:theme="@style/AppTheme">
        <activity android:label="@string/app_name" android:name="com.manuelpeinado.glassactionbardemo.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:label="@string/activity_title_scrollview" android:name="com.manuelpeinado.glassactionbardemo.ScrollViewActivity" android:theme="@style/AppTheme.TranslucentActionBar"/>
        <activity android:label="@string/activity_title_fixed_header" android:name="com.manuelpeinado.glassactionbardemo.FixedHeaderActivity" android:theme="@style/AppTheme.TranslucentActionBar"/>
        <activity android:label="@string/activity_title_changing_content" android:name="com.manuelpeinado.glassactionbardemo.ChangingContentActivity" android:theme="@style/AppTheme.TranslucentActionBar"/>
        <activity android:label="@string/activity_title_listview" android:name="com.manuelpeinado.glassactionbardemo.ListViewActivity" android:theme="@style/AppTheme.TranslucentActionBar"/>
        <activity android:label="@string/activity_title_settings" android:name="com.manuelpeinado.glassactionbardemo.SettingsActivity" android:theme="@style/AppTheme.TranslucentActionBar"/>
    </application>

</manifest>
